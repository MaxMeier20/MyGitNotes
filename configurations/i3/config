#Define Screen Estate and wallpaper
exec xrandr --output DVI-D-0 --auto --mode 1280x1024 --rotate left --output DisplayPort-1 --auto --right-of DVI-D-0 --output HDMI-A-0 --auto --right-of DisplayPort-1 & sleep 1 & nitrogen --restore
exec xrandr --output DisplayPort1 --primary

### Make it look nice

# Disable window titlebars entirely, excluding browsers
for_window [class="^.*"] border none
for_window [class="Firefox"] border normal
for_window [class="Chromium"] border normal
for_window [class="Opera"] border normal
for_window [class="Brave-browser"] border normal
#Only show edges if more than one window is displayed on an output
hide_edge_borders smart

# Color everything Arc-Dark (commented colors are part of trying to correctly assign the colorscheme colors to i3)
