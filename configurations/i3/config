set $ws7 "7: Work"
set $ws8 "8: SSH"
set $ws9 "9"
set $ws10 "10"
 

#Name Workspaces and assign monitors

workspace $ws1 output DisplayPort-1
workspace $ws2 output DVI-D-0
workspace $ws3 output HDMI-A-0
workspace $ws4 output DisplayPort-1
workspace $ws5 output DVI-D-0
workspace $ws6 output HDMI-A-0 
workspace $ws7 output HDMI-A-0
workspace $ws8 output DVI-D-0
workspace $ws9 output DisplayPort-1 

#Assign programs to Workspaces - Only both variants together seem to work
