#						border		background		text		indicator
client.focused			$bgcolor	$bgcolor		$textcolor	$bgcolor
client.unfocused		$ibgcolor	$ibgcolor		$itextcolor	$ibgcolor
client.focused_inactive	$ibgcolor	$ibgcolor		$itextcolor	$ibgcolor
client.urgent			$ubgcolor	$ubgcolor		$textcolor	$ubgcolor

### Autostart Programs

#Allow Transparency

# The current compton.conf doesn't use transparency, but dimming instead
#For eye-candy and distractions c&p from https://keybase.pub/adamprescott/i3config, with v1 of compton.conf
exec compton -b --config ~/.config/compton/compton.conf

#Save Power
exec --no-startup-id 'xfce4-power-manager'

#Start Program Launcher
exec synapse -s

#Get informed on Updates
#exec_always --no-startup-id apt-notifier

#Get the NumPad working correctly
exec_always --no-startup-id numlockx on

### My Individual Keybindings

#Setup Program Launcher
bindsym Control+Space exec synapse 

# Have a way to move workspaces instead of containers 

bindsym $mod+x move workspace to output right
bindsym $mod+y move workspace to output left

# Allow stopping of the system
bindsym Mod1+Control+r exec --no-startup-id dbus-send --system --print-reply --dest=org.freedesktop.login1 /org/freedesktop/login1 "org.freedesktop.login1.Manager.Reboot" boolean:true
bindsym Mod1+Control+s exec --no-startup-id dbus-send --system --print-reply --dest=org.freedesktop.login1 /org/freedesktop/login1 "org.freedesktop.login1.Manager.Suspend" boolean:true
bindsym Mod1+Control+x exec --no-startup-id dbus-send --system --print-reply --dest="org.freedesktop.ConsoleKit" /org/freedesktop/ConsoleKit/Manager org.freedesktop.ConsoleKit.Manager.Stop
bindsym Mod1+Control+l exec --no-startup-id i3lock -t -i ~/Bilder/lockscreeni3.png

#This is a c&p from https://ermannoferrari.net/i3-config-file - It works with pulseaudio and activates my Logitech G710 mediakeys
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

#Starting the browser
bindsym $mod+Shift+Return exec firefox

#Fullfill my switcher heart with joy (filemanager)
bindsym $mod+e exec pcmanfm
#Fullfill my switcher heart with joy (window-cycling)
bindsym Mod1+Tab focus right
bindsym Mod1+Shift+Tab focus left

